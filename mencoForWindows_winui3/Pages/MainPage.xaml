<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="mencoForWindows_winui3.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:mencoForWindows_winui3.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="using:mencoForWindows_winui3.ViewModels" 
    d:DataContext="{d:DesignInstance Type=viewModel:MainPageViewModel}"
    mc:Ignorable="d">
    <Page.DataContext>
        <viewModel:MainPageViewModel x:Name="vm"/>
    </Page.DataContext>
    
    <Grid>
        <StackPanel>
            <TextBlock Text="{Binding userInfo.userName}"/>
            <TextBlock Text="{Binding userInfo.userFullName}"/>
            <TextBlock Text="{Binding userInfo.userId}"/>
            <TextBlock Text="{Binding userInfo.userToken}"/>
            <Button Content="test" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Page>
